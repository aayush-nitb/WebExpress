block css
    style.
        :host{
            display:block;
            width:350px;
        }
        .panel-heading{
            text-align:center;
        }
        .input-group{
            margin-bottom:20px;
        }
        .btn{
            width:100%;
        }

block js
    script(src="#{url('controllers/md5.js')}")
